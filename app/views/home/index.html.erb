<div class="page-header">
  <h1>Brands</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Url</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, brands) do |brand| %>
        <td><%= link_to brand.name, brand %></td>
        <td><%= link_to brand.url, brand.url, target: '_blank' %></td>
        <td><%= link_to 'Show', brand %></td>
      <% end %>
    </tbody>
  </table>
</div>
