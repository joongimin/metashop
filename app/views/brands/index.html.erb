<div class="page-header">
  <%= link_to new_brand_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Brand
  <% end %>
  <h1>Manage Brands</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, brands) do |brand| %>
        <td><%= brand.name %></td>
        <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
        <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Manage Links', brand_brand_links_path(brand_id: brand.id) %></td>
      <% end %>
    </tbody>
  </table>
</div>
